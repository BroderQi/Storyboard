<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Storyboard.ViewModels"
        x:Class="Storyboard.Views.CreateProjectDialog"
        x:DataType="vm:MainViewModel"
        Title="创建新项目"
        Width="480"
        Height="240"
        WindowStartupLocation="CenterOwner"
        Background="#0a0a0a">

  <Border Padding="20" Background="#18181b" BorderBrush="#27272a" BorderThickness="1">
    <StackPanel Spacing="16">
      <TextBlock Text="创建新项目" FontSize="18" FontWeight="SemiBold" Foreground="#f5f5f5" />

      <StackPanel Spacing="8">
        <TextBlock Text="项目名称" FontSize="13" Foreground="#f5f5f5" />
        <TextBox Text="{Binding NewProjectName, Mode=TwoWay}"
                 Watermark="输入项目名称"
                 Background="#0f0f0f"
                 BorderBrush="#3f3f46"
                 Foreground="#f5f5f5"
                 KeyDown="OnTextBoxKeyDown" />
      </StackPanel>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Classes="Secondary" Click="OnCancelClick">取消</Button>
        <Button Classes="Primary" Click="OnCreateClick">创建项目</Button>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
