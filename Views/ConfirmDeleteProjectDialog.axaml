<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:v="using:Storyboard.Views"
  x:Class="Storyboard.Views.ConfirmDeleteProjectDialog"
  x:DataType="v:ConfirmDeleteProjectDialogViewModel"
        Title="确认删除"
        Width="460"
        Height="220"
        WindowStartupLocation="CenterOwner"
        Background="#0a0a0a">

  <Border Padding="20" Background="#18181b" BorderBrush="#27272a" BorderThickness="1">
    <StackPanel Spacing="16">
      <TextBlock Text="确认删除项目？" FontSize="18" FontWeight="SemiBold" Foreground="#f5f5f5" />

      <TextBlock Text="{Binding ProjectName}" FontSize="13" Foreground="#a1a1aa" TextWrapping="Wrap" />

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Classes="Secondary" Click="OnCancelClick">取消</Button>
        <Button Classes="Primary" Click="OnConfirmClick">删除</Button>
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
