<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Storyboard.ViewModels"
             x:Class="Storyboard.Views.ToolbarView"
             x:DataType="vm:MainViewModel">

    <StackPanel Spacing="8" Margin="0,16">
        
        <!-- 项目操作 -->
        <Button Classes="Secondary" 
                ToolTip.Tip="新建项目"
                HorizontalAlignment="Center">
            <PathIcon Data="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" Width="20" Height="20" />
        </Button>

        <Button Classes="Secondary" 
                ToolTip.Tip="打开项目"
                HorizontalAlignment="Center">
            <PathIcon Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z" Width="20" Height="20" />
        </Button>

        <Separator Height="1" Background="#3f3f46" Margin="8,8" />

        <!-- 视图切换 -->
        <Button Classes="Secondary"
                Command="{Binding ToggleViewModeCommand}"
                ToolTip.Tip="切换网格/时间轴视图"
                HorizontalAlignment="Center">
            <PathIcon Data="M4 11h5V5H4v6zm0 7h5v-6H4v6zm6 0h5v-6h-5v6zm6 0h5v-6h-5v6zm-6-7h5V5h-5v6zm6-6v6h5V5h-5z" Width="20" Height="20" />
        </Button>

        <Button Classes="Secondary"
                Command="{Binding ToggleTaskManagerCommand}"
                ToolTip.Tip="任务管理器"
                HorizontalAlignment="Center">
            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" Width="20" Height="20" />
        </Button>

        <Separator Height="1" Background="#3f3f46" Margin="8,8" />

        <!-- 设置 -->
        <Button Classes="Secondary"
                Command="{Binding ToggleProviderSettingsCommand}"
                ToolTip.Tip="AI Provider 设置"
                HorizontalAlignment="Center">
            <PathIcon Data="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" Width="20" Height="20" />
        </Button>

    </StackPanel>

</UserControl>
