<script>
    // 拖拽排序逻辑
    const list = document.getElementById('storyboard-list');
    let dragSrcEl = null;

    function handleDragStart(e) {
      dragSrcEl = this;
      this.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
    }

    function handleDragOver(e) {
      if (e.preventDefault) e.preventDefault();
      this.classList.add('drag-over');
      return false;
    }

    function handleDragLeave() {
      this.classList.remove('drag-over');
    }

    function handleDrop(e) {
      if (e.stopPropagation) e.stopPropagation();
      if (dragSrcEl !== this) {
        list.insertBefore(dragSrcEl, this);
        // 重新编号
        Array.from(list.children).forEach((row, index) => {
          row.cells[0].textContent = (index + 1).toString().padStart(2, '0');
        });
      }
      return false;
    }

    function handleDragEnd() {
      Array.from(list.children).forEach(row => {
        row.classList.remove('dragging', 'drag-over');
      });
    }

    function initDnD() {
      const rows = list.querySelectorAll('tr');
      rows.forEach(row => {
        row.addEventListener('dragstart', handleDragStart);
        row.addEventListener('dragenter', handleDragOver);
        row.addEventListener('dragover', handleDragOver);
        row.addEventListener('dragleave', handleDragLeave);
        row.addEventListener('drop', handleDrop);
        row.addEventListener('dragend', handleDragEnd);
      });
    }

    initDnD();

    // 预览功能
    const modal = document.getElementById('preview-modal');
    const closeBtn = document.getElementById('close-modal');
    const zoomBtns = document.querySelectorAll('[title="查看大图"]');

    zoomBtns.forEach(btn => {
      btn.onclick = () => {
        modal.classList.remove('hidden');
      };
    });

    closeBtn.onclick = () => modal.classList.add('hidden');
    modal.onclick = (e) => { if(e.target === modal) modal.classList.add('hidden'); };

    // 模拟数据操作
    document.querySelector('button:contains("添加分镜")')?.addEventListener('click', () => {
      alert('正在连接 AI 生成模型，请稍候...');
    });
  </script>


</body></html>